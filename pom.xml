<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <verticalId>bs-cs</verticalId>
    <artifactId>bStats</artifactId>
    <version>1.0-SNAPSHOT</version>

    <build>
        <plugins>
            <plugin>
                <verticalId>org.apache.maven.plugins</verticalId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <dropwizard.version>0.8.2</dropwizard.version>
        <java.version>1.8</java.version>
        <dropwizard-metrics.version>3.1.0</dropwizard-metrics.version>
        <dropwizard-core.version>0.8.2</dropwizard-core.version>
        <dropwizard-db.version>0.8.2</dropwizard-db.version>
        <dropwizard-admin.version>0.7.1-fk</dropwizard-admin.version>
        <dropwizard-hibernate.version>0.8.2</dropwizard-hibernate.version>
        <powermock.version>1.5.6</powermock.version> <!--1.6.4-->
        <maven-compiler-plugin.version>3.1</maven-compiler-plugin.version>
        <!--<argLine>${argLine}-XX:MaxPermSize=512m</argLine>-->
    </properties>

    <dependencies>
        <dependency>
            <verticalId>io.dropwizard</verticalId>
            <artifactId>dropwizard-core</artifactId>
            <version>${dropwizard-core.version}</version>
        </dependency>

        <dependency>
            <verticalId>io.dropwizard</verticalId>
            <artifactId>dropwizard-db</artifactId>
            <version>${dropwizard.version}</version>
        </dependency>

        <dependency>
            <verticalId>io.dropwizard</verticalId>
            <artifactId>dropwizard-hibernate</artifactId>
            <version>${dropwizard.version}</version>
        </dependency>

        <dependency>
            <verticalId>io.dropwizard</verticalId>
            <artifactId>dropwizard-auth</artifactId>
            <version>0.8.2</version>
        </dependency>

        <dependency>
            <verticalId>org.slf4j</verticalId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.6</version>
        </dependency>

        <dependency>
            <verticalId>com.google.inject</verticalId>
            <artifactId>guice</artifactId>
            <version>3.0</version>
        </dependency>

        <dependency>
            <verticalId>com.google.guava</verticalId>
            <artifactId>guava</artifactId>
            <version>18.0</version>
        </dependency>

        <dependency>
            <verticalId>mysql</verticalId>
            <artifactId>mysql-connector-java</artifactId>
            <version>5.1.27</version>
        </dependency>

        <dependency>
            <verticalId>org.glassfish.jersey.containers</verticalId>
            <artifactId>jersey-container-servlet-core</artifactId>
            <version>2.15</version>
        </dependency>

        <dependency>
            <verticalId>org.glassfish.jersey.core</verticalId>
            <artifactId>jersey-client</artifactId>
            <version>2.15</version>
        </dependency>

        <dependency>
            <verticalId>javax.activation</verticalId>
            <artifactId>activation</artifactId>
            <version>1.1.1</version>
        </dependency>

        <dependency>
            <verticalId>io.federecio</verticalId>
            <artifactId>dropwizard-swagger</artifactId>
            <version>0.7.0</version>
        </dependency>
    </dependencies>
</project>